<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/beeva.gray</item>
    <item name="colorPrimaryDark">@color/beeva.gray.dark</item>
    <item name="colorAccent">@color/beeva.yellow</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.Menu" parent="AppTheme.NoActionBar">
    <item name="android:textColorSecondary">@color/beeva.white</item>
    <item name="android:activatedBackgroundIndicator">@drawable/selector_list_menu_background</item>
    <item name="android:listDivider">@drawable/gradient_toolbar</item>
  </style>

  <style name="SplashTheme" parent="AppTheme.NoActionBar">
    <item name="android:windowBackground">@drawable/background_splash</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


  <!-- Views -->

  <style name="Button">
    <item name="android:textColor">@color/beeva.texts.color.default</item>
    <item name="font">@string/font.avenir.book</item>
  </style>

  <style name="CheckBox">
    <item name="android:textColor">@color/beeva.texts.color.default</item>
    <item name="android:theme">@style/CheckBox.Theme</item>
    <item name="font">@string/font.avenir.book</item>
  </style>

  <style name="CheckBox.Theme">
    <item name="colorAccent">@color/beeva.checkbox.color.enabled</item>
    <item name="android:textColorSecondary">@color/beeva.checkbox.color.disabled</item>
  </style>

  <style name="RelativeLayout">
  </style>

  <style name="RelativeLayout.Settings">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/height.item.settings</item>
    <item name="android:paddingLeft">@dimen/padding.left.item.settings</item>
    <item name="android:paddingRight">@dimen/padding.right.item.settings</item>
  </style>

  <style name="RadioButton">
    <item name="android:textColor">@color/beeva.texts.color.default</item>
    <item name="android:theme">@style/RadioButton.Theme</item>
    <item name="font">@string/font.avenir.book</item>
  </style>

  <style name="RadioButton.Theme">
    <item name="colorAccent">@color/beeva.checkbox.color.enabled</item>
    <item name="android:textColorSecondary">@color/beeva.checkbox.color.disabled</item>
  </style>

  <style name="TextView">
    <item name="android:textColor">@color/beeva.texts.color.default</item>
    <item name="font">@string/font.avenir.book</item>
  </style>

  <style name="CustomAlertDialog" parent="@android:style/Theme.Dialog">
    <item name="android:background">@color/beeva.gray</item>
  </style>

</resources>
