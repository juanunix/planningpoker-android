<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/RelativeLayout.Settings"
    >

  <com.beeva.corporate.TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:text="@string/settings.label.language"
      app:font="@string/font.corporative.book"
      style="@style/TextView"
      />

  <RadioGroup
      android:id="@+id/rgLanguage"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:orientation="horizontal"
      >
    <com.beeva.corporate.RadioButton
        android:id="@+id/rbSpanish"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/settings.label.language.spanish"
        app:font="@string/font.corporative.book"
        style="@style/RadioButton"
        />

    <Space
        android:layout_width="10dp"
        android:layout_height="match_parent"
        />

    <com.beeva.corporate.RadioButton
        android:id="@+id/rbEnglish"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/settings.label.language.english"
        app:font="@string/font.corporative.book"
        style="@style/RadioButton"
        />
  </RadioGroup>

</RelativeLayout>