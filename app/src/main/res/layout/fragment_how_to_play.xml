<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beeva.gray"
    android:orientation="vertical"
    tools:context="ui.howToPlay.HowToPlayFragment"
    >
  <include layout="@layout/item_layout_header_title"/>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <com.beeva.corporate.TextView
        android:id="@+id/txtHowToPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="10dp"
        android:maxLines="100"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:scrollbars="horizontal"
        android:text="@string/lorem.long"
        android:textAlignment="center"
        android:textSize="16sp"
        style="@style/TextView"
        />
  </ScrollView>

</LinearLayout>
