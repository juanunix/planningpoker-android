<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.beeva.planningpoker.ui.share.ShareFragment"
    style="@style/CommonBase"
    >
  <include layout="@layout/item_layout_header_title"/>

  <ScrollView
      android:id="@+id/scrollView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <Space
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          />

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:src="@drawable/share_ic"
          />

      <Space
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          />

      <com.beeva.corporate.TextView
          android:id="@+id/txtShare"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:lineSpacingExtra="10dp"
          android:paddingLeft="25dp"
          android:paddingRight="25dp"
          android:scrollbars="horizontal"
          android:text="@string/lorem.short"
          android:maxLines="2"
          android:textAlignment="center"
          android:textSize="16sp"
          style="@style/TextView"
          />

      <Space
          android:layout_width="wrap_content"
          android:layout_height="26dp"
          />

      <include layout="@layout/separator_main"/>

      <Space
          android:layout_width="wrap_content"
          android:layout_height="47dp"
          />

      <include layout="@layout/item_layout_share_social"/>

      <Space
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          />

    </LinearLayout>
  </ScrollView>

</LinearLayout>
